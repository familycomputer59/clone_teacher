<div class="col-md-4">
  <div class="well">
  <h2><%= labware.name %></h2>
  <p>
    <%= form_for rental_detail, remote: true do |f| %>
    <div class="input-group">
      <%= f.number_field :quantity, value: rental_detail.quantity.to_i, class: "form-control", min: 1,:disabled => @can_update, max: labware.quantity - labware.circulation %>
      <%= f.hidden_field :labware_id, value: labware.id%>
      <div class="input-group-btn">
        <%= f.submit "Update Quantity", class: "btn btn-primary" %>
        <%= link_to "Delete", rental_detail, { data: { confirm: "Are you sure you wish to delete the product '#{rental_detail.labware.name}' from your cart?" }, method: :delete, remote: true,  class: "btn btn-danger" } %>
      </div>
      <% end %>
    </div>
  </p>
  </div>
</div>